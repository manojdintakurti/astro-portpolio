---
// src/components/Navbar.astro
import AnimateIn from './animations/AnimateIn';

const navItems = [
  { name: "Home", href: "#home" },
  { name: "Projects", href: "#projects" },
  { name: "About", href: "#about" },
  { name: "Experience", href: "#experience" },
  { name: "Contact", href: "#contact" }
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
  <AnimateIn client:load animation="slideDown">
    <nav class="container mx-auto px-6 relative">
      <div class="flex items-center justify-center h-18"> <!-- Increased height for better spacing -->
        <div class="flex items-center space-x-12"> <!-- Increased spacing between items -->
          {navItems.map((item) => (
            <a
              href={item.href}
              class="text-lg font-bold text-gray-800 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 
                     transition-all duration-200 hover:-translate-y-0.5"
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>
    </nav>
  </AnimateIn>
</header>