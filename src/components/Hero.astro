---
// src/components/sections/Hero.astro
import AnimateIn from './animations/AnimateIn';

const technologies = [
  { name: "Java", color: "text-green-500 dark:text-green-400" },
  { name: "JavaScript", color: "text-blue-500 dark:text-blue-400" },
  { name: "React", color: "text-cyan-500 dark:text-cyan-400" },
  { name: "SpringBoot", color: "text-yellow-500 dark:text-yellow-400" },
  { name: "AWS", color: "text-orange-500 dark:text-orange-400" }
];
---

<section id="home" class="min-h-screen flex items-center justify-center relative bg-white dark:bg-[#0B1120] transition-colors duration-300">
  <div class="container mx-auto px-4 max-w-6xl relative z-10">
    <div class="text-center">
      <AnimateIn client:load animation="fadeIn">
        <span class="inline-block px-4 py-2 rounded-lg bg-blue-100/50 dark:bg-blue-900/30 
                     text-blue-600 dark:text-blue-400 text-sm font-medium mb-6
                     border border-blue-200/50 dark:border-blue-700/50">
          Open to Work
        </span>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.1}>
        <h1 class="text-4.5xl md:text-6xl font-bold mb-6 text-gray-900 dark:text-white">
          Hi, I'm <span class="gradient-text">Sai Manoj Dintakurti</span>
        </h1>
      </AnimateIn>
      
      <AnimateIn client:load animation="slideUp" delay={0.2}>
        <h2 class="text-2xl md:text-3xl text-gray-700 dark:text-gray-200 mb-6">
          Software Engineer specializing in 
          <span class="text-gray-900 dark:text-white font-semibold"> Full Stack Development</span>
        </h2>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.3}>
        <p class="text-gray-600 dark:text-gray-300 mb-8 text-lg max-w-2xl mx-auto">
          Building scalable applications and solving complex problems with clean, efficient code
        </p>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.4}>
        <div class="flex flex-col sm:flex-row justify-center gap-4 mb-12">
          <a href="#contact" 
             class="group relative inline-flex items-center justify-center px-8 py-4
                    bg-gradient-to-r from-blue-500 to-blue-600
                    dark:from-blue-600 dark:to-blue-500
                    text-white rounded-lg font-medium
                    transition-all duration-300 ease-out
                    hover:-translate-y-1
                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 
                    dark:focus:ring-offset-[#0B1120]">
            <span class="relative flex items-center gap-2">
              Let's Collaborate
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M14 5l7 7m0 0l-7 7m7-7H3"
                />
              </svg>
            </span>
          </a>
          
          <a href="#projects"
             class="group relative inline-flex items-center justify-center px-8 py-4
                    text-gray-900 dark:text-white rounded-lg font-medium
                    border-2 border-gray-300 dark:border-gray-700/50
                    hover:border-blue-500 dark:hover:border-blue-400
                    hover:text-blue-600 dark:hover:text-blue-400
                    hover:-translate-y-1 transition-all duration-300
                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 
                    dark:focus:ring-offset-[#0B1120]">
            <span class="flex items-center gap-2">
              View Projects
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M9 5l7 7-7 7"
                />
              </svg>
            </span>
          </a>

          <a href="/resume.pdf" 
            download 
            class="group relative inline-flex items-center justify-center px-8 py-4
                    text-gray-900 dark:text-white rounded-lg font-medium
                    border-2 border-gray-300 dark:border-gray-700/50
                    hover:border-blue-500 dark:hover:border-blue-400
                    hover:text-blue-600 dark:hover:text-blue-400
                    hover:-translate-y-1 transition-all duration-300
                    focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 
                    dark:focus:ring-offset-[#0B1120] gap-2">
              Download Resume
              <svg 
                xmlns="http://www.w3.org/2000/svg" 
                class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-1" 
                fill="none" 
                viewBox="0 0 24 24" 
                stroke="currentColor"
              >
                <path 
                  stroke-linecap="round" 
                  stroke-linejoin="round" 
                  stroke-width="2" 
                  d="M13 16l-4-4m0 0l4-4m-4 4h12"
                />
              </svg>
            </span>
          </a>
        </div>
      </AnimateIn>

      <AnimateIn client:load animation="slideUp" delay={0.5}>
        <div class="max-w-3xl mx-auto">
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
            Tech Stack
          </p>
          <div class="flex flex-wrap justify-center items-center gap-3">
            {technologies.map((tech) => (
              <span class={`px-4 py-2 rounded-lg bg-gray-50 dark:bg-[#1a2333]/50 
                           ${tech.color} font-medium text-sm
                           border border-gray-200/50 dark:border-gray-700/50
                           transform hover:-translate-y-1 transition-all duration-300 
                           hover:border-blue-500/50 dark:hover:border-blue-400/50
                           hover:shadow-md cursor-default`}>
                {tech.name}
              </span>
            ))}
          </div>
        </div>
      </AnimateIn>
    </div>
  </div>
</section>

<style>
  /* Theme-adaptive gradient text effect */
  .gradient-text {
    @apply text-transparent bg-clip-text;
    @apply bg-gradient-to-r from-blue-700 to-blue-500; /* Light theme - darker gradient */
  }

  /* Dark theme override with slightly darker gradient */
  :global(.dark) .gradient-text {
    background-image: linear-gradient(to right, #3B82F6, #60A5FA); /* Adjusted to be slightly darker */
  }
</style>